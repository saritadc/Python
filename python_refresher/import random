import random
file = open("scores.txt", "r")

UserScore=random.randint(0,10)

lines = file.readlines()

file.close()

student=input('What is your name? ')

file = open("scores.txt", "w")
for line in lines:
    line = line.strip()
    name, score = line.strip().split(",")
    if name!=student:
        file.write(line + '\n')
    else:
        file.write(name +',' +str(UserScore) + '\n')